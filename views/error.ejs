    <!-- Main Content -->
    <main class="container py-5 flex-grow-1 d-flex align-items-center">
        <div class="row justify-content-center w-100">
            <div class="col-md-8 col-lg-6">
                <div class="card-modern text-center">
                    <!-- Error Header -->
                    <div class="card-header-modern" style="background: linear-gradient(135deg, #ef4444, #dc2626);">
                        <div class="error-icon">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </div>
                        <h2 class="mb-2">Oops! Terjadi Kesalahan</h2>
                        <p class="mb-0 opacity-90">Sepertinya ada yang tidak beres</p>
                    </div>
                    
                    <div class="card-body p-5">
                        <!-- Error Message -->
                        <div class="mb-4">
                            <div class="alert-modern alert-danger-modern">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Detail Error:</strong>
                                <div class="mt-2 text-start">
                                    <%= message %>
                                </div>
                            </div>
                        </div>

                        <!-- Troubleshooting Tips -->
                        <div class="mb-4 text-start">
                            <h5 class="fw-bold mb-3">
                                <i class="bi bi-lightbulb me-2 text-warning"></i>
                                Saran Perbaikan:
                            </h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    Pastikan semua field sudah terisi dengan benar
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    Periksa format NIK (harus 16 digit angka)
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    Pastikan file foto berformat JPG/PNG dan tidak lebih dari 5MB
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    Coba refresh halaman dan isi form lagi
                                </li>
                            </ul>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                            <a href="/" class="btn-modern btn-primary-modern">
                                <i class="bi bi-arrow-left me-2"></i>
                                Kembali ke Form
                            </a>
                            <button onclick="window.location.reload()" class="btn-modern btn-outline-modern">
                                <i class="bi bi-arrow-clockwise me-2"></i>
                                Refresh Halaman
                            </button>
                        </div>

                        <!-- Help Section -->
                        <div class="mt-4 pt-4 border-top">
                            <p class="text-muted mb-2">
                                <i class="bi bi-question-circle me-1"></i>
                                Masih mengalami masalah?
                            </p>
                            <a href="https://github.com/YoshCasaster" target="_blank" 
                               class="text-decoration-none fw-medium">
                                <i class="bi bi-github me-1"></i>
                                Laporkan di GitHub
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Back to Home Quick Action -->
                <div class="text-center mt-4">
                    <div class="card-modern p-3">
                        <div class="row align-items-center">
                            <div class="col-md-8 text-md-start text-center">
