    <!-- Additional Modern Enhancements -->
    <script>
        // Form progress indicator
        const formInputs = document.querySelectorAll('#ektp-form input[required], #ektp-form select[required]');
        const progressBar = document.getElementById('formProgress');
        
        function updateProgress() {
            const filledInputs = Array.from(formInputs).filter(input => input.value.trim() !== '');
            const progress = (filledInputs.length / formInputs.length) * 100;
            progressBar.style.width = progress + '%';
        }
        
        formInputs.forEach(input => {
            input.addEventListener('input', updateProgress);
            input.addEventListener('change', updateProgress);
        });
        
        // Reset form functionality
        document.getElementById('resetForm')?.addEventListener('click', function() {
            if (confirm('Apakah Anda yakin ingin mereset form? Semua data akan hilang.')) {
                document.getElementById('ektp-form').reset();
                updateProgress();
                // Clear signature canvas
                const canvas = document.getElementById('signatureCanvas');
                const ctx = canvas.getContext('2d');
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                // Clear photo preview
                document.getElementById('photo-preview-container').innerHTML = '';
            }
        });
        
        // Enhanced photo preview
        document.getElementById('pas_photo')?.addEventListener('change', function(e) {
            const file = e.target.files[0];
            const container = document.getElementById('photo-preview-container');
            
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    container.innerHTML = `
                        <div class="text-center">
                            <img src="${e.target.result}" alt="Preview" class="img-thumbnail" style="max-width: 150px; max-height: 200px;">
                            <p class="small text-muted mt-2">${file.name}</p>
                        </div>
                    `;
                };
                reader.readAsDataURL(file);
            } else {
                container.innerHTML = '';
            }
        });
        
        // Form validation enhancement
        document.getElementById('ektp-form')?.addEventListener('submit', function(e) {
            const form = e.target;
            if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
                
                // Show toast notification
                const toast = `
                    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header bg-danger text-white">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong class="me-auto">Validasi Form</strong>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                        </div>
                        <div class="toast-body">
                            Mohon lengkapi semua field yang wajib diisi.
                        </div>
                    </div>
                `;
                
                const toastContainer = document.querySelector('.toast-container');
                toastContainer.insertAdjacentHTML('beforeend', toast);
                const toastElement = toastContainer.lastElementChild;
                const bsToast = new bootstrap.Toast(toastElement);
                bsToast.show();
            }
            
            form.classList.add('was-validated');
        });
    </script>
